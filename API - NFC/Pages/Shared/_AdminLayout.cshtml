<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administración</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 2rem;
        }

        .navbar {
            background-color: #00963f;
        }
        /* Mantén aquí estilos generales del layout */
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        @* Las opciones del menú principal usan el atributo data-visible-roles.
           El script al final del archivo lee el rol del token/localStorage
           y oculta los elementos que no correspondan. *@
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#" style="color:#FFF;"
                   onmouseover="this.style.fontWeight='bold'"
                   onmouseout="this.style.fontWeight='normal'">Panel de Administración</a>

                <div class="collapse navbar-collapse">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item" data-visible-roles="Guardia">
                            <a class="nav-link" href="/Terminal" style="color:#FFF;"
                               onmouseover="this.style.fontWeight='bold'"
                               onmouseout="this.style.fontWeight='normal'">NFC HUB (Terminal)</a>
                        </li>

                        <li class="nav-item" data-visible-roles="Administrador">
                            <a class="nav-link" href="/Admin/Usuarios" style="color:#FFF;"
                               onmouseover="this.style.fontWeight='bold'"
                               onmouseout="this.style.fontWeight='normal'">Gestión de Datos</a>
                        </li>

                        <li class="nav-item" data-visible-roles="Guardia">
                            <a class="nav-link" href="/Admin/GestionNFC" style="color:#FFF;"
                               onmouseover="this.style.fontWeight='bold'"
                               onmouseout="this.style.fontWeight='normal'">Gestión NFC</a>
                        </li>

                        <li class="nav-item login-nav-item ms-auto">
                            <a class="nav-link login-nav-link @(Context.Request.Path.Value.Contains("/Login") ? "active" : "")"
                               href="/Login" style="color:#FFF;">
                                <i class="bi bi-box-arrow-in-right"></i> Login
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts globales -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Router global: define rutas públicas y base API -->
    <script src="~/js/router.js"></script>

    <script>
        (function () {
            // ✅ Constante para URL de login (mantenibilidad)
            const LOGIN_URL = '/Login';

            function decodeJwt(token) {
                if (!token) return null;
                const parts = token.split('.');
                if (parts.length !== 3) return null;
                try {
                    const payload = parts[1].replace(/-/g, '+').replace(/_/g, '/');
                    const json = atob(payload);
                    return JSON.parse(json);
                } catch {
                    return null;
                }
            }

            function obtenerRolActivo() {
                const rawToken = localStorage.getItem('auth_token');
                const decoded = decodeJwt(rawToken);
                const storedUser = localStorage.getItem('user_info');
                const localUser = storedUser ? JSON.parse(storedUser) : null;

                const rol = decoded?.role
                    || decoded?.Rol
                    || decoded?.["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"]
                    || localUser?.Rol
                    || localUser?.rol
                    || null;

                return typeof rol === 'string' ? rol.trim() : null;
            }

            // ✅ Verificar autenticación - Redirigir a Login si no hay token
            function verificarAutenticacion() {
                const token = localStorage.getItem('auth_token');
                if (!token) {
                    // No hay token, redirigir a Login
                    window.location.replace(LOGIN_URL);
                    return false;
                }
                
                // Verificar si el token es válido (no expirado)
                const decoded = decodeJwt(token);
                if (!decoded) {
                    // Token inválido, limpiar y redirigir
                    localStorage.removeItem('auth_token');
                    localStorage.removeItem('user_info');
                    window.location.replace(LOGIN_URL);
                    return false;
                }
                
                // Verificar expiración del token
                if (decoded.exp && decoded.exp * 1000 < Date.now()) {
                    // Token expirado, limpiar y redirigir
                    localStorage.removeItem('auth_token');
                    localStorage.removeItem('user_info');
                    window.location.replace(LOGIN_URL);
                    return false;
                }
                
                return true;
            }

            function aplicarVisibilidadPorRol() {
                const rol = obtenerRolActivo();
                const items = document.querySelectorAll('[data-visible-roles]');

                items.forEach(item => {
                    const rolesPermitidos = (item.getAttribute('data-visible-roles') || '')
                        .split(',')
                        .map(r => r.trim().toLowerCase())
                        .filter(Boolean);

                    if (!rol || (rolesPermitidos.length && !rolesPermitidos.includes(rol.toLowerCase()))) {
                        item.style.display = 'none';
                    }
                });
            }

            // ✅ Ejecutar verificación de autenticación primero
            if (!verificarAutenticacion()) {
                return; // Si no está autenticado, no continuar
            }

            aplicarVisibilidadPorRol();
            document.addEventListener('DOMContentLoaded', aplicarVisibilidadPorRol);
        })();
    </script>

    <!-- Sección para scripts específicos de cada página -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
