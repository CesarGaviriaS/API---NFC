<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Administración</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .main-content {
            padding: 2rem;
        }

        /* ✅ NAVBAR CON MEJOR DISEÑO */
        .navbar {
            background: linear-gradient(135deg, #00963f 0%, #007a33 100%);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
        }

        .navbar-brand {
            color: #FFF !important;
            font-weight: 600;
            transition: all 0.2s ease;
        }

            .navbar-brand:hover {
                font-weight: bold;
                transform: translateY(-1px);
            }

        .navbar-nav .nav-link {
            color: #FFF !important;
            font-weight: 500;
            transition: all 0.2s ease;
            border-radius: 6px;
            margin: 0 0.25rem;
            padding: 0.5rem 1rem;
        }

            .navbar-nav .nav-link:hover {
                font-weight: bold;
                background: rgba(255, 255, 255, 0.15);
            }

        /* ✅ BOTÓN DE LOGOUT MÁS PEQUEÑO Y MEJOR COLOR */
        .btn-logout {
            background: #495057;
            color: white !important;
            border: none;
            padding: 0.4rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.85rem;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            cursor: pointer;
        }

            .btn-logout:hover {
                background: #343a40;
                transform: translateY(-1px);
            }

            .btn-logout i {
                font-size: 0.95rem;
            }

        /* ✅ BADGE DE USUARIO MÁS PEQUEÑO */
        .user-badge {
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            padding: 0.35rem 0.85rem;
            border-radius: 15px;
            color: white;
            font-weight: 500;
            font-size: 0.8rem;
            display: flex;
            align-items: center;
            gap: 0.4rem;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

            .user-badge i {
                font-size: 0.95rem;
            }

        /* ✅ SECCIÓN DE USUARIO */
        .user-info {
            display: flex;
            align-items: center;
            gap: 0.6rem;
            margin-left: auto;
        }

        /* ✅ MODAL DE CONFIRMACIÓN */
        .logout-modal {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            backdrop-filter: blur(5px);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            animation: fadeIn 0.3s ease;
        }

       

        .logout-modal-content {
            background: white;
            padding: 2rem;
            border-radius: 20px;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
            max-width: 400px;
            width: 90%;
            text-align: center;
            animation: slideUp 0.3s ease;
        }

       

        .logout-modal h3 {
            color: #dc3545;
            margin-bottom: 1rem;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .logout-modal p {
            color: #666;
            margin-bottom: 1.5rem;
            font-size: 1rem;
        }

        .logout-modal-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
        }

            .logout-modal-buttons button {
                padding: 0.7rem 2rem;
                border: none;
                border-radius: 10px;
                font-weight: 600;
                cursor: pointer;
                transition: all 0.3s ease;
            }

        .btn-confirm-logout {
            background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
            color: white;
        }

            .btn-confirm-logout:hover {
                transform: scale(1.05);
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.4);
            }

        .btn-cancel-logout {
            background: #6c757d;
            color: white;
        }

            .btn-cancel-logout:hover {
                background: #5a6268;
                transform: scale(1.05);
            }

   

        .user-badge,
        .btn-logout {
            width: 100%;
            justify-content: center;
        }

        }

     

        .logout-modal-buttons button {
            width: 100%;
        }

        }
    </style>
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <i class="bi bi-shield-check"></i> Panel de Administración
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item" data-visible-roles="Guardia">
                            <a class="nav-link" href="/Terminal">
                                <i class="bi bi-broadcast-pin"></i> NFC HUB (Terminal)
                            </a>
                        </li>

                        <li class="nav-item" data-visible-roles="Administrador">
                            <a class="nav-link" href="/Admin/Usuarios">
                                <i class="bi bi-gear-fill"></i> Gestión de Datos
                            </a>
                        </li>

                        <li class="nav-item" data-visible-roles="Guardia">
                            <a class="nav-link" href="/Admin/GestionNFC">
                                <i class="bi bi-tag-fill"></i> Gestión NFC
                            </a>
                        </li>
                    </ul>

                    <!-- ✅ SECCIÓN DERECHA: USUARIO + LOGOUT -->
                    <div class="user-info">
                        <div class="user-badge" id="userBadge">
                            <i class="bi bi-person-circle"></i>
                            <span id="userName">Usuario</span>
                        </div>
                        <button class="btn btn-logout" id="btnLogoutNav">
                            <i class="bi bi-box-arrow-right"></i>
                            Cerrar sesión
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- ✅ MODAL DE CONFIRMACIÓN -->
    <div class="logout-modal" id="logoutModal">
        <div class="logout-modal-content">
            <h3><i class="bi bi-exclamation-triangle-fill"></i> Cerrar Sesión</h3>
            <p>¿Estás seguro de que deseas cerrar tu sesión?</p>
            <div class="logout-modal-buttons">
                <button class="btn-confirm-logout" id="btnConfirmLogout">
                    <i class="bi bi-check-circle"></i> Sí, cerrar
                </button>
                <button class="btn-cancel-logout" id="btnCancelLogout">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
            </div>
        </div>
    </div>

    <!-- Scripts globales -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/router.js"></script>

    <script>
        (function () {
            // ✅ DECODIFICAR JWT
            function decodeJwt(token) {
                if (!token) return null;
                const parts = token.split('.');
                if (parts.length !== 3) return null;
                try {
                    const payload = parts[1].replace(/-/g, '+').replace(/_/g, '/');
                    const json = atob(payload);
                    return JSON.parse(json);
                } catch {
                    return null;
                }
            }

            // ✅ OBTENER ROL ACTIVO
            function obtenerRolActivo() {
                const rawToken = localStorage.getItem('auth_token');
                const decoded = decodeJwt(rawToken);
                const storedUser = localStorage.getItem('user_info');
                const localUser = storedUser ? JSON.parse(storedUser) : null;

                const rol = decoded?.role
                    || decoded?.Rol
                    || decoded?.["http://schemas.microsoft.com/ws/2008/06/identity/claims/role"]
                    || localUser?.Rol
                    || localUser?.rol
                    || null;

                return typeof rol === 'string' ? rol.trim() : null;
            }

            // ✅ OBTENER NOMBRE DEL USUARIO
            function obtenerNombreUsuario() {
                const storedUser = localStorage.getItem('user_info');
                if (!storedUser) return 'Usuario';

                try {
                    const user = JSON.parse(storedUser);
                    const nombre = user.Nombre || user.nombre || '';
                    const apellido = user.Apellido || user.apellido || '';
                    return nombre ? `${nombre} ${apellido}`.trim() : 'Usuario';
                } catch {
                    return 'Usuario';
                }
            }

            // ✅ MOSTRAR INFO DEL USUARIO
            function mostrarInfoUsuario() {
                const userName = document.getElementById('userName');
                if (userName) {
                    userName.textContent = obtenerNombreUsuario();
                }
            }

            // ✅ VERIFICAR AUTENTICACIÓN (sin bloquear rutas)
            function verificarAutenticacion() {
                const token = localStorage.getItem('auth_token');
                const path = window.location.pathname.toLowerCase();

                // Solo verificar si estamos en /terminal
                if (path.startsWith('/terminal') && !token) {
                    window.location.replace('/Login');
                    return false;
                }

                return true;
            }

            // ✅ APLICAR VISIBILIDAD POR ROL
            function aplicarVisibilidadPorRol() {
                const rol = obtenerRolActivo();
                const items = document.querySelectorAll('[data-visible-roles]');

                items.forEach(item => {
                    const rolesPermitidos = (item.getAttribute('data-visible-roles') || '')
                        .split(',')
                        .map(r => r.trim().toLowerCase())
                        .filter(Boolean);

                    if (!rol || (rolesPermitidos.length && !rolesPermitidos.includes(rol.toLowerCase()))) {
                        item.style.display = 'none';
                    }
                });
            }

            // ✅ MODAL DE LOGOUT
            function mostrarModalLogout() {
                const modal = document.getElementById('logoutModal');
                if (modal) modal.style.display = 'flex';
            }

            function ocultarModalLogout() {
                const modal = document.getElementById('logoutModal');
                if (modal) modal.style.display = 'none';
            }

            function cerrarSesion() {
                // Limpiar todo
                localStorage.clear();
                sessionStorage.clear();

                // Animación de salida
                document.body.style.opacity = '0';
                document.body.style.transition = 'opacity 0.3s ease';

                setTimeout(() => {
                    window.location.replace('/Login');
                }, 300);
            }

            // ✅ EVENTOS
            const btnLogout = document.getElementById('btnLogoutNav');
            const btnConfirm = document.getElementById('btnConfirmLogout');
            const btnCancel = document.getElementById('btnCancelLogout');
            const modal = document.getElementById('logoutModal');

            if (btnLogout) {
                btnLogout.addEventListener('click', (e) => {
                    e.preventDefault();
                    mostrarModalLogout();
                });
            }

            if (btnConfirm) {
                btnConfirm.addEventListener('click', cerrarSesion);
            }

            if (btnCancel) {
                btnCancel.addEventListener('click', ocultarModalLogout);
            }

            // Cerrar modal al hacer clic fuera
            if (modal) {
                modal.addEventListener('click', (e) => {
                    if (e.target === modal) {
                        ocultarModalLogout();
                    }
                });
            }

            // Cerrar modal con ESC
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape') {
                    ocultarModalLogout();
                }
            });

            // ✅ INICIALIZAR
            verificarAutenticacion();
            aplicarVisibilidadPorRol();
            mostrarInfoUsuario();
            document.addEventListener('DOMContentLoaded', () => {
                verificarAutenticacion();
                aplicarVisibilidadPorRol();
                mostrarInfoUsuario();
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
