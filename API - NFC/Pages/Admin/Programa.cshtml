@page
@model API___NFC.Pages.Admin.ProgramaModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestión de Programas";
}

<div class="main-content">
    <partial name="_AdminSubNav" />
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <button type="button" class="btn btn-success" onclick="abrirModal()">
            <i class="bi bi-plus-circle-fill me-2"></i>Crear Nuevo
        </button>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-success">
            <tr>
                <th>ID</th>
                <th>Código</th>
                <th>Nombre del Programa</th>
                <th>Nivel</th>
                <th style="width: 15%;">Acciones</th>
            </tr>
        </thead>
        <tbody id="tablaDatos">
        </tbody>
    </table>
</div>

<div class="modal fade" id="editorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formularioEditor">
                    <input type="hidden" id="idInput">
                    <div class="mb-3">
                        <label for="nombreInput" class="form-label">Nombre del Programa</label>
                        <input type="text" class="form-control" id="nombreInput" required>
                    </div>
                    <div class="mb-3">
                        <label for="codigoInput" class="form-label">Código</label>
                        <input type="text" class="form-control" id="codigoInput" required>
                    </div>
                    <div class="mb-3">
                        <label for="nivelInput" class="form-label">Nivel de Formación</label>
                        <input type="text" class="form-control" id="nivelInput">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="guardar()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/programa.js"></script>
}