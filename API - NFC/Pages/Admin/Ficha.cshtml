@page
@model API___NFC.Pages.Admin.FichaModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Gestión de Fichas";
}

<div class="main-content">
    <partial name="_AdminSubNav" />

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>@ViewData["Title"]</h1>
        <button type="button" class="btn btn-success" onclick="abrirModal()">
            <i class="bi bi-plus-circle-fill me-2"></i>Crear Nueva Ficha
        </button>
    </div>

    <table class="table table-striped table-hover shadow-sm">
        <thead class="table-success">
            <tr>
                <th>ID</th>
                <th>Código</th>
                <th>Programa Asociado</th>
                <th>Fecha Inicio</th>
                <th>Fecha Final</th>
                <th style="width: 15%;">Acciones</th>
            </tr>
        </thead>
        <tbody id="tablaDatos"></tbody>
    </table>
</div>

<div class="modal fade" id="editorModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitulo"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="formularioEditor">
                    <input type="hidden" id="idInput">
                    <div class="mb-3">
                        <label for="codigoInput" class="form-label">Código de la Ficha</label>
                        <input type="text" class="form-control" id="codigoInput" required>
                    </div>
                    <div class="mb-3">
                        <label for="programaIdInput" class="form-label">Programa</label>
                        <select id="programaIdInput" class="form-select" required>
                            <option value="">Cargando programas...</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="fechaInicioInput" class="form-label">Fecha de Inicio</label>
                            <input type="date" class="form-control" id="fechaInicioInput">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="fechaFinalInput" class="form-label">Fecha de Finalización</label>
                            <input type="date" class="form-control" id="fechaFinalInput">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-success" onclick="guardar()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/admin/ficha.js"></script>
}